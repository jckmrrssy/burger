<h1>Welcome to Create-A-Burger!</h1>

<h2>To eat:</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <p>
                    {{this.id}}. {{this.burger_name}}

                    <button data-burgerid = "{{this.id}}" class = 'devourIt'>Devour!</button>
                </p>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured:</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{this.id}}. {{this.burger_name}}
        {{/if}}
    {{/each}}
</ul>


<h2>Create your burger!</h2>

<form class="create-form">
    <div class="form-group">
        <label = for "burgerGuy">Burger Name:</label>
        <input type="text" id = "burgerInput" name = "name">
    </div>
    <button type = "submit">Order Up!</button>
</form>